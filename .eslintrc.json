{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [ //继承规则
        // "plugin:vue/strongly-recommended",
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        //ES6
        "no-var": [
            "error",
            "always"
        ]
    }
}